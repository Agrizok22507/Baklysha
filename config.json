{
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 4,
    "modules-left": [],
    "modules-center": ["clock"],
    "modules-right": ["pulseaudio", "network"],
    
    // Часы
    "clock": {
        "interval": 1,
        "format": " {:%H:%M}",
        "tooltip": false
    },

    // Звук
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": " {icon} {volume}%",
        "format-muted": " Muted",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },

    // Сеть
    "network": {
        "format-wifi": " {essid}",
        "format-ethernet": " {ifname}",
        "format-disconnected": "⚠ No Net",
        "interval": 5,
        "on-click": "nm-connection-editor"
    }
}
